<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <com.github.ivbaranov.mli.MaterialLetterIcon
        android:id="@+id/letterIcon"
        android:layout_width="@dimen/letter_icon_size"
        android:layout_height="@dimen/letter_icon_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:mli_letter_color="@android:color/white"
        app:mli_shape_color="@android:color/black"
        app:mli_shape_type="circle" />

    <TextView
        android:id="@+id/tvHeading"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="usuario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/letterIcon"
        app:layout_constraintTop_toTopOf="@+id/letterIcon" />

    <TextView
        android:id="@+id/tvLongText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="efefafafafawfafafafafdawfawfefwefefafafafawfafafafafdawfawfawfyyyyyyyyyyyyyyyyyyyyyyyyyyyyafafaffffa..."
        app:layout_constraintEnd_toEndOf="@+id/tvHeading"
        app:layout_constraintStart_toStartOf="@+id/tvHeading"
        app:layout_constraintTop_toBottomOf="@+id/tvHeading" />

    <TextView
        android:id="@+id/tvSubtitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Puntuacion: 8"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/letterIcon"
        app:layout_constraintEnd_toEndOf="@+id/tvLongText"
        app:layout_constraintStart_toStartOf="@+id/tvLongText" />

</androidx.constraintlayout.widget.ConstraintLayout>